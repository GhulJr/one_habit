<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/todayFragment">

    <fragment
        android:id="@+id/todayFragment"
        android:name="com.ghuljr.onehabit.ui.main.today.TodayFragment"
        android:label="fragment_today"
        tools:layout="@layout/fragment_today" >
        <action
            android:id="@+id/action_todayFragment_to_settingsFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/timelineFragment"
        android:name="com.ghuljr.onehabit.ui.main.timeline.TimelineFragment"
        android:label="fragment_timeline"
        tools:layout="@layout/fragment_timeline" >
        <action
            android:id="@+id/action_timelineFragment_to_todayFragment"
            app:destination="@id/todayFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.ghuljr.onehabit.ui.main.settings.ProfileFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_profile" />
</navigation>