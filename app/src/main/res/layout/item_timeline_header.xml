<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        style="@style/OneHabit.Timeline.Line"
        android:layout_width="@dimen/timeline_thickness"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/timeline_start"
        app:layout_constraintStart_toStartOf="@id/timeline_start"
        app:layout_constraintTop_toBottomOf="@id/timeline_start" />

    <View
        android:id="@+id/timeline_start"
        android:layout_width="@dimen/timeline_icon_size"
        android:layout_height="@dimen/timeline_thickness"
        android:background="@color/primary_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        app:layout_constraintStart_toStartOf="parent"/>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/header_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_small"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/OneHabit.TextAppearance.Primary.Title.Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/timeline_start"
        app:layout_constraintTop_toTopOf="@id/timeline_start"
        app:layout_constraintBottom_toBottomOf="@id/timeline_start"
        tools:text="Fight chocolate" />

</androidx.constraintlayout.widget.ConstraintLayout>