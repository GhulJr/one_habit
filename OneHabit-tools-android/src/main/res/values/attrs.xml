<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OneHabit.Widget.TextDivider">
        <attr name="android:text" format="string" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="textPadding" format="dimension" />
        <attr name="textSize" format="dimension" />
        <attr name="color" format="color"/>
    </declare-styleable>

    <declare-styleable name="OneHabit.Widget.SeparatorCounter">
        <attr name="startValue" format="integer" />
        <attr name="maxValue" format="integer" />
        <attr name="separator" format="string"/>
        <attr name="equalColor" format="color"/>
        <attr name="overflowColor" format="color"/>
        <attr name="allowOverflow" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ErrorWidget">
        <attr name="errorIcon" format="reference"/>
        <attr name="errorTitle" format="string"/>
        <attr name="errorMessage" format="string"/>
        <attr name="displayContactSupport" format="boolean" />
        <attr name="displayRetry" format="boolean" />
        <attr name="retryButtonText" format="string" />
    </declare-styleable>
</resources>