<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OneHabit.Button.Primary.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/default_button_height</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/default_text_size_large</item>
        <item name="android:textColor">@color/primary_black</item>
        <item name="strokeColor">@color/primary_black</item>
        <item name="strokeWidth">@dimen/default_stroke_width</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/default_corner_radius</item>
    </style>

    <style name="OneHabit.Button.Primary.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">@dimen/default_button_height</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/default_text_size_large</item>
        <item name="android:textColor">@color/primary_black</item>
    </style>

    <style name="OneHabit.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:minHeight">@dimen/default_button_height</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/default_text_size_large</item>
        <item name="android:textColor">@color/secondary_white</item>
        <item name="backgroundTint">@color/primary_black</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/default_corner_radius</item>
    </style>

    <style name="OneHabit.TextAppearance.Primary" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/primary_black</item>
        <item name="fontFamily">@font/mplus_rounded_regular</item>
    </style>

    <style name="OneHabit.TextAppearance.Primary.Large" parent="OneHabit.TextAppearance.Primary">
        <item name="android:textSize">@dimen/default_text_size_large</item>
    </style>

    <style name="OneHabit.TextAppearance.Primary.Header" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">@dimen/default_text_size_large</item>
        <item name="android:textColor">@color/primary_black</item>
        <item name="fontFamily">@font/mplus_rounded_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OneHabit.TextAppearance.Primary.Title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">@dimen/default_text_size_title</item>
        <item name="android:textColor">@color/primary_black</item>
        <item name="fontFamily">@font/mplus_rounded_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

